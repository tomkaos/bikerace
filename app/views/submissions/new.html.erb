<div class="submission-form">
  <div class="container">

    <h1>Your idea</h1>
    <p class="lead">We are sponsoring for anyone to come up with a slogan for the race. Please submit your slogan idea to us</p>

    <%= form_for @submission, url: { action: 'create'}, html: { class: 'form'} do |f| %>

      <% if flash[:notice] %>
        <p class="notice alert alert-primary"><%= notice %></p>
      <% end %>

      <% if f.object.errors.any? %>
        <ul class="form-errors">
          <%=raw f.object.errors.full_messages.join('<br />') %>
        </ul>
      <% end %>

      <div class="row align-items-center">
        <div class="col-md-6">
          <div class="form-group">
            <label>First Name</label>
            <%= f.text_field :first_name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label>Last Name</label>
            <%= f.text_field :last_name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label>Email Address</label>
            <%= f.email_field :email, class: 'form-control' %>
          </div>
          <div class="form-group">
            <label>Your slogan idea</label>
            <%= f.text_area :slogan, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.submit "Submit", class:'btn btn-primary btn-lg' %>
          </div>
        </div>
        <div class="col-md-6">
          <img src="<%= image_url('idea.png') %>" alt="Idea image" />
        </div>
      </div>
    <% end %>

  </div>
</div>
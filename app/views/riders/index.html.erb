<div class="riders-banner" style="background-image:url(<%= image_url('riders_banner.jpg') %>);">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6">
        <h1>Our Riders</h1>
        <p class="lead">Check out detailed informations of our riders!</p>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <hr class="mt-5 mb-5"/>
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">City of Origin</th>
        <th scope="col">Current Location</th>
      </tr>
      </thead>

      <tbody>
      <% @riders.each.with_index(1) do |rider, index| %>
        <tr>
          <td scope="row"><%= index %></td>
          <td class="first_name">
            <span><%= rider.first_name %></span>
          </td>
          <td class="last_name">
            <span><%= rider.last_name %></span>
          </td>
          <td class="city">
            <span><%= rider.city %>, <%= rider.state %></span>
          </td>
          <td class="location">
            <a class="btn btn-primary btn-sm" target="_blank" href="<%= rider.gmap_url %>">View on Google</a>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>